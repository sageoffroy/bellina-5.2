<%= form_with(model: color, local: true) do |form| %>
  <% if color.errors.any? %>
    <script type="text/javascript">
      <% color.errors.full_messages.each do |message| %>
        toastr['error']('<%= message %>');
      <% end %>
    </script>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :hex_code %>
    <%= form.text_field :hex_code %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
