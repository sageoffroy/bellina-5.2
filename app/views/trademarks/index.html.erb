<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/">Tablero</a>
  </li>
  <li class="breadcrumb-item active">Marcas</li>

</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-table"></i>
    Marcas</div>
  <div class="card-body">
    <div class="table-responsive">
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Proveedor</th>
            <th>Opciones</th>
          </tr>
        </thead>

        <tbody>
          <% @trademarks.each do |trademark| %>
            <tr>
              <td><%= trademark.name %></td>
              <td><%= trademark.provider %></td>
              <td>
                <%= link_to((fa_icon "eye"), trademark) %>
                <%= link_to((fa_icon "pencil"), edit_trademark_path(trademark)) %>
                <%= link_to((fa_icon "trash-o"), trademark, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar?' }) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

<%= link_to 'Cargar Proveedor', new_trademark_path, class: 'btn btn-primary' %>