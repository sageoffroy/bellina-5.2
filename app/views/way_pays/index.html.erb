<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/">Tablero</a>
  </li>
  <li class="breadcrumb-item active">Formas de Pago</li>

</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-table"></i>
    Formas de pago</div>
  <div class="card-body">
    <div class="table-responsive">
      <table>
        <thead>
          <tr>
            <th data-data="name">Nombre</th>
            <th data-data="c1">C1</th>
            <th data-data="c2">C2</th>
            <th data-data="c3">C3</th>
            <th data-data="c4">C4</th>
            <th data-data="c5">C5</th>
            <th data-data="c6">C6</th>
            <th data-data="c7">C7</th>            
            <th data-data="c8">C8</th>
            <th data-data="c9">C9</th>
            <th data-data="c10">C10</th>
            <th data-data="c11">C11</th>
            <th data-data="c12">C12</th>
            <th> Opciones </th>
          </tr>
        </thead>

        <tbody>
        <% @way_pays.each do |way_pay| %>
          <tr>
            <td><%= way_pay.name %></td>
            <td><%= way_pay.c1 %></td>
            <td><%= way_pay.c2 %></td>
            <td><%= way_pay.c3 %></td>
            <td><%= way_pay.c4 %></td>
            <td><%= way_pay.c5 %></td>
            <td><%= way_pay.c6 %></td>
            <td><%= way_pay.c7 %></td>
            <td><%= way_pay.c8 %></td>
            <td><%= way_pay.c9 %></td>
            <td><%= way_pay.c10 %></td>
            <td><%= way_pay.c11 %></td>
            <td><%= way_pay.c12 %></td>
            <td>
              <%= link_to((fa_icon "eye"), way_pay) %>
              <%= link_to((fa_icon "pencil"), edit_way_pay_path(way_pay)) %>
              <%= link_to((fa_icon "trash-o"), way_pay, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar?' }) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

<%= link_to 'Crear Forma de Pago', new_way_pay_path, class: 'btn btn-primary' %>