            <%= @footwear.color %>
          </p>
          <p>
            <strong>Stock:</strong>
            <%= @footwear.stock %>
          </p>
          <p>
            <strong>Stock warning:</strong>
            <%= @footwear.stock_warning %>
          </p>
          
        </div>

        <div class="col-md-12">
          

          

          

          <p>
            <strong>Wholesale price:</strong>
            <%= @footwear.wholesale_price %>
          </p>

          <p>
            <strong>Retail price:</strong>
            <%= @footwear.retail_price %>
          </p>

          <p>
            <strong>Active:</strong>
            <%= @footwear.active %>
          </p>

          <p>
